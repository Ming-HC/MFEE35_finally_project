<body class="bg-body-tertiary">

  <div class="container">
    <main>

      <br><br><br><br><br>

      <div class="row g-5">
        <div class="col-md-5 col-lg-2 sidebar">
          <%- include('sidebar')%>
        </div>
        <div class="col-md-7 col-lg-10" style="background-color: white;">
          <h3 class="mt-3">交換紀錄</h3>
        <form class="needs-validation" novalidate>
          <table>
            <tr>
              <th><h3>賣家姓名&nbsp&nbsp&nbsp&nbsp</h3></th>
              <th><h3>買家商品&nbsp&nbsp&nbsp&nbsp</h3></th>
              <th><h3>賣家商品&nbsp&nbsp&nbsp&nbsp</h3></th>
              <th><h3>是否成功&nbsp&nbsp&nbsp&nbsp</h3></th>
              <th><h3>交易時間&nbsp&nbsp&nbsp&nbsp</h3></th>
            </tr>
            <% for (var i=0; i<record.length; i++) {%>
              <tr>
                <td>
                  <%= record[i].memberid%>
                </td>
                <td>
                  <%= record[i].product%>
                </td>
                <td>
                  <%= record[i].product2%>
                </td>
                <td>
                  <%= record[i].success%>
                </td>
                <td>
                  <%= record[i].time%>
                </td>
              </tr>
              <%}%>
            </table>
          </div>
            
            
          <!-- <button class="w-20 btn btn-secondary btn-lg mb-5" type="submit">存檔</button> -->
        </form>
      </div>